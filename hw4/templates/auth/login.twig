{# 
loginFrm[] - данные формы(login,remember)
action - 
message - 
#}
        <form method="POST" action="{{constant('BASE_URL')}}/{{action}}" class="row g-3 needs-validation" novalidate>

			<div class="col-auto">
				<input type="text" 
				class="form-control {{message??null?'is-invalid'}}" 
				placeholder="Login:" 
				id="loginFrm[login]" 
				name="loginFrm[login]" 
				value="{{loginFrm.login??''}}"
				aria-describedby="login-tooltip">
				<div class="invalid-tooltip" id="login-tooltip">
				{{message}}
				</div>
			</div>
			<div class="col-auto">
				<input type="password" class="form-control" placeholder="Password:" name="loginFrm[password]" id="password">
			</div>
			<div class="col-auto">
				<input class="form-check-input" type="checkbox" {{loginFrm.remember??''?'checked':''}} name="loginFrm[remember]" id="LoginFrm[remember]" >
				<label class="form-check-label text-light" for="LoginFrm[remember]">Remember<br>me</label>
			</div>
        
			<button type="submit" class="btn btn-primary col-auto">Login</button>
			
			<a class="text-light col-auto" href="{{constant('BASE_URL')}}/register">Register<br> New User</a>
			</div>
				
        </form>