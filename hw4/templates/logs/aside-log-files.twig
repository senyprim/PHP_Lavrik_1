<!-- array files (массив иен файлов), active - активный элемент -->
<div class="col-sm">
    <div class="list-group">
        {% for file in files %}
            <a 
                href="{{constant('BASE_URL')}}/logs/{{file}}" 
                class="list-group-item list-group-item-action {{ file == active ? 'disabled' : '' }}" 
                aria-current="true"
            >
                {{file}}
            </a>

        {% endfor %}
    </div>
</div>